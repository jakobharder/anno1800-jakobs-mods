    <Asset>
      <!--
        Global action buffs will only be applied to discovered regions.
        Registering the trigger with AlwaysTrue has unwanted side effects.
        The only way to ensure other regions are covered is by repeating the trigger once entered.
        Note: buff needs to be removed first (AddBuff=0), otherwise it won't refresh.
      -->
      <Template>Trigger</Template>
      <Values>
        <Standard>
          <GUID>1500010920</GUID>
          <!-- <GUID>1500010919</GUID> -->
          <!-- <GUID>1500010918</GUID> -->
          <!-- <GUID>1500010917</GUID> -->
          <!-- <GUID>1500010916</GUID> -->
          <Name>Add Lifestyle Buff to newly entered session</Name>
        </Standard>
        <Trigger>
          <TriggerCondition>
            <Template>ConditionEvent</Template>
            <Values>
              <Condition />
              <ConditionEvent>
                <ConditionEvent>SessionEnter</ConditionEvent>
              </ConditionEvent>
            </Values>
          </TriggerCondition>
          <TriggerActions>
            <Item>
              <TriggerAction>
                <Template>ActionBuff</Template>
                <Values>
                  <Action />
                  <ActionBuff>
                    <BuffAsset>1500010808</BuffAsset> <!-- remove old GUID -->
                    <AddBuff>0</AddBuff>
                    <BuffProcessingParticipant>1</BuffProcessingParticipant>
                  </ActionBuff>
                </Values>
              </TriggerAction>
            </Item>
            <Item>
              <TriggerAction>
                <Template>ActionBuff</Template>
                <Values>
                  <Action />
                  <ActionBuff>
                    <BuffAsset>1500010826</BuffAsset>
                    <AddBuff>0</AddBuff>
                    <BuffProcessingParticipant>1</BuffProcessingParticipant>
                  </ActionBuff>
                </Values>
              </TriggerAction>
            </Item>
            <Item>
              <TriggerAction>
                <Template>ActionBuff</Template>
                <Values>
                  <Action />
                  <ActionBuff>
                    <BuffAsset>1500010826</BuffAsset>
                    <AddBuff>1</AddBuff>
                    <BuffProcessingParticipant>1</BuffProcessingParticipant>
                  </ActionBuff>
                </Values>
              </TriggerAction>
            </Item>
          </TriggerActions>
          <ResetTrigger>
            <Template>AutoCreateTrigger</Template>
            <Values>
              <Trigger>
                <TriggerCondition>
                  <IsBaseAutoCreateAsset>1</IsBaseAutoCreateAsset>
                  <Values>
                    <Condition />
                    <ConditionAlwaysTrue />
                  </Values>
                </TriggerCondition>
              </Trigger>
            </Values>
          </ResetTrigger>
        </Trigger>
      </Values>
    </Asset>
