<ModOps>
  <!-- # Product: Pickled Vegetables -->
  <ModOp GUID="1010217" Type="addNextSibling">
    <Asset>
      <Template>Product</Template>
      <Values>
        <Standard>
          <GUID>1500010831</GUID>
          <Name>Vegetables</Name>
          <IconFilename>products\pickled-vegetables\icon_vegetables.png</IconFilename>
        </Standard>
        <Locked />
        <Product>
          <StorageLevel>Building</StorageLevel>
          <ProductCategory>11704</ProductCategory>
          <BasePrice>30</BasePrice>
          <CivLevel>1</CivLevel>
          <AssociatedRegion>Moderate</AssociatedRegion>
          <ProductionRegions>
            <Item>
              <RegionType>Moderate</RegionType>
            </Item>
          </ProductionRegions>
        </Product>
        <ExpeditionAttribute>
          <BaseMorale>30</BaseMorale>
          <ExpeditionAttributes>
            <Item>
              <Attribute>Faith</Attribute>
              <Amount>15</Amount>
            </Item>
          </ExpeditionAttributes>
        </ExpeditionAttribute>
      </Values>
    </Asset>
  </ModOp>

  <!-- # Storage lists -->
  <!-- create fallback container to avoid warnings in case the product is already available -->
  <ModOp Type="addNextSibling" GUID="120055">
    <Asset>
      <Template>fallback</Template>
      <Values>
        <Standard>
          <GUID>1500010221</GUID>
        </Standard>
        <ProductStorageList>
          <ProductList>
            <Item />
          </ProductList>
        </ProductStorageList>
        <ExpeditionFeature>
          <FeedOption>
            <FeedOptions />
          </FeedOption>
        </ExpeditionFeature>
      </Values>
    </Asset>
  </ModOp>
  <!-- StandardProductList,StandardMarketplaceModerateStorageList: after Sausages -->
  <ModOp Type="addNextSibling" GUID="120055,120057" Path="/Values/ProductStorageList/ProductList/Item[Product='1010238' and not(../Item/Product='1500010831')] | //Values[Standard/GUID='1500010221']/ProductStorageList/ProductList/Item[last()]">
    <Item>
      <Product>1500010831</Product>
    </Item>
  </ModOp>
  <!-- product lists: after fur coats / artisan -->
  <ModOp Type="addNextSibling" GUID="501997,501992,502019,502006,502016,502220,502065,502031" Path="/Values/ProductList/List/Item[(Product='1010247' or Product='501997' or Product='502019') and not(../Item/Product='1500010831')] | //Values[Standard/GUID='1500010221']/ProductStorageList/ProductList/Item[last()]">
    <Item>
      <Product>1500010831</Product>
    </Item>
  </ModOp>
  <!-- agriculture: prepend vegetables -->
  <ModOp Type="addPrevSibling" GUID="502037" Path="/Values/ProductList/List/Item[not(../Item/Product='1500010836')] | //Values[Standard/GUID='1500010221']/ProductStorageList/ProductList/Item[last()]">
    <Item>
      <Product>1500010836</Product>
    </Item>
  </ModOp>

  <!-- Expedition -->
  <ModOp Type="add" GUID="800111" Path="/Values/ExpeditionFeature/FeedOption/FeedOptions[not(Item/Product='1500010831')] | //Values[Standard/GUID='1500010221']/ExpeditionFeature/FeedOption/FeedOptions">
    <Item>
      <MoraleFactor>0.3</MoraleFactor>
      <Product>1500010831</Product>
    </Item>
  </ModOp>

  <!-- # Docklands (ordered, unique) -->
  <!-- <ModOp Type="add" GUID="131764" Path="/Values/TradeContractFeature/Traders/Item[TraderName='131809']/TradeLevels/Item/Trades[Item/Good='1010213' and not(Item/Good='1500010120')] | //Values[Standard/GUID='1500010221']/ProductStorageList/ProductList"> -->
    <!-- feedl -->
    <!-- <Item>
      <Level>Rare</Level>
      <Good>1500010120</Good>
    </Item>
  </ModOp> -->

  <!-- # Remove fallbacks -->
  <ModOp Type="remove" GUID="1500010221" />
</ModOps>